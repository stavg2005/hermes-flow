# Use Node.js 22 (matches your version)
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose your custom port 6000
EXPOSE 6000

# Start development server with proper configuration
CMD ["npm", "start"]